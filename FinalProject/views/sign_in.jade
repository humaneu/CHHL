extends _bootstrap
append styles
	// Custom styles for this template
	//link(href='../public/stylesheets/signin.css', rel='stylesheet')

block body
	.container
		include ../public/stylesheets/signin.css
		form.form-signin( action="/authenticate",method="post")
			h2.form-signin-heading Please sign in
			label.sr-only(for='inputEmail') Email address
			input#inputEmail.form-control(type='email', placeholder='Email address', name="user", required='', autofocus='')
			label.sr-only(for='inputPassword') Password
			input#inputPassword.form-control(type='password', placeholder='Password', name="pass", required='')
			
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in


