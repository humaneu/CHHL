extends _bootstrap
append styles
	// Custom styles for this template
	//link(href='../public/stylesheets/signup.css', rel='stylesheet')
block body
	.container
		include ../public/stylesheets/signup.css
		form.form-signup( action="/signup",method="post")
			h2.form-signup-heading Please sign up
			label.sr-only(for='inputEmail') Email address
			input#inputEmail.form-control(type='email', name='useremail', placeholder='Email address', required='', autofocus='')
			label.sr-only(for='inputUsername') Username
			input#inputUsername.form-control(type='password', name='username', placeholder='Username', required='')
			label.sr-only(for='inputPassword') Password
			input#inputPassword.form-control(type='password', name='pass', placeholder='Password', required='')
			label.sr-only(for='inputPassword') Password again
			input#inputPassword.form-control(type='password', name='pass1', placeholder='Confirm Password', required='')
			
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up


